%option noyywrap
%{
    #include<stdio.h>
    #define TOKEN_IDENTIFICADOR 1
%}

%%
[a-zA-Z][a-zA-Z0-9_]* { return TOKEN_IDENTIFICADOR; }
.|\n                   { /* Ignorar otros caracteres */ }
%%

int main(){
    int token;
    printf("Analizador de identificadores\n");
    printf("Ingrese texto: ");
    
    while(1) {
        token = yylex();
        if ( token == TOKEN_IDENTIFICADOR )
            printf("Identificador reconocido: %s\n", yytext);
        if( token == 0)
            break;
    }
    return 0;
}